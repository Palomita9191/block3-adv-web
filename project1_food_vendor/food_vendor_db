CREATE DATABASE IF NOT EXISTS food_vendor_db;
USE food_vendor_db;

CREATE TABLE IF NOT EXISTS dishes (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(255) NOT NULL,
    price DECIMAL(10, 2) NOT NULL
);

-- Inserting some sample data
INSERT INTO dishes (name, price) VALUES ('Spaghetti Bolognese', 12.50);
INSERT INTO dishes (name, price) VALUES ('Vegetable Curry', 10.00);
